@{
    ViewBag.Title = "logs";
    Layout = "~/Views/Shared/_LayoutMini.cshtml";
}


<style>
    table {
        width: 100%;
    }

    input {
        width: 95%;
        margin: 5px;
    }

    td {
        vertical-align: top;
    }
</style>
<html ng-app="myLogs">
<body>
    <table style="margin-top:30px" ng-controller="LogsController">
        <tr>
            <td style="width:20%">
                @Html.Partial("~/Views/Admin/_Menu.cshtml")
            </td>
            <td>
                <div class="panel panel-primary" style="margin-left:10px">
                    <div class="list-group">
                        <a class="list-group-item active">Ziyaretçi Logları</a>
                    </div>
                    <div class="panel-body">
                        <table>
                            <tr ng-repeat="item in logsList">
                                <td style="border:1px solid #000;font-size:small">
                                    {{item.ID}}
                                </td>
                                <td style="border:1px solid #000;font-size:small">
                                    {{item.Title}}
                                </td>
                                <td style="border:1px solid #000;font-size:small">
                                    {{item.Ip}}
                                </td>
                                <td style="border:1px solid #000;font-size:small">
                                    {{item.Date}}
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>


            </td>
        </tr>
    </table>
</body>
</html>
<script src="~/AngularJSControllers/Logs.js"></script>